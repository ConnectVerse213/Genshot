---
import parseTomlToJson from "@/lib/utils/parseTomlToJson";

const config = parseTomlToJson("./src/config/config.toml");

interface SchemaProps {
  type?: 'website' | 'organization' | 'article' | 'product' | 'service';
  title?: string;
  description?: string;
  image?: string;
  url?: string;
  author?: string;
  datePublished?: string;
  dateModified?: string;
  price?: string;
  currency?: string;
}

const {
  type = 'website',
  title,
  description,
  image,
  url,
  author,
  datePublished,
  dateModified,
  price,
  currency = 'USD'
} = Astro.props as SchemaProps;

// Base URL for the site
const baseUrl = config.site.base_url;
const currentUrl = url || new URL(Astro.url.pathname, Astro.site).href;

// Organization schema (always included)
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "genshot",
  "url": baseUrl,
  "logo": `${baseUrl}/images/logo-Genshot.svg`,
  "description": "Leading AI-Powered Blockchain Agent for autonomous penetration testing and vulnerability assessment",
  "foundingDate": "2024",
  "industry": "Cybersecurity",
  "serviceArea": "Global",
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+57-320-545-1915",
    "contactType": "Customer Service",
    "email": "business.genshot@gmail.com",
    "availableLanguage": ["English"]
  },
  "sameAs": [
    "https://twitter.com/ConnectVerse3",
    "https://linkedin.com/company/connect-verse",
    "https://github.com/ConnectVerse213"
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Cybersecurity Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Multi-chain AI-Powered Platform",
          "description": "Automating the multi-chain workflows to create tokens"
        }
      },
      {
        "@type": "Offer", 
        "itemOffered": {
          "@type": "Service",
          "name": "Continuous Support",
          "description": "24/7 support"
        }
      }
    ]
  }
};

// Website schema
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": config.site.title,
  "url": baseUrl,
  "description": config.site.description,
  "publisher": {
    "@type": "Organization",
    "name": "genshot"
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": `${baseUrl}/search?q={search_term_string}`,
    "query-input": "required name=search_term_string"
  },
  "inLanguage": ["en", "es", "fr"]
};

// Service schema for cybersecurity
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "AI-Powered Blockchain Agent",
  "description": "Advanced autonomous red team operations and penetration testing using artificial intelligence",
  "provider": {
    "@type": "Organization",
    "name": "genshot"
  },
  "serviceType": "Cybersecurity",
  "category": "Information Security",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Cybersecurity Solutions",
    "itemListElement": [
      {
        "@type": "Offer",
        "name": "Autonomous Red Team",
        "description": "AI-driven penetration testing with MITRE ATT&CK framework"
      },
      {
        "@type": "Offer", 
        "name": "Vulnerability Assessment",
        "description": "Continuous security monitoring and threat detection"
      },
      {
        "@type": "Offer",
        "name": "Compliance Testing", 
        "description": "OWASP, SOC 2, ISO 27001 compliance verification"
      }
    ]
  },
  "audience": {
    "@type": "Audience",
    "audienceType": "Enterprise"
  }
};

// Article schema (for blog posts)
const articleSchema = title && datePublished ? {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "image": image ? `${baseUrl}${image}` : `${baseUrl}/images/og-image.jpg`,
  "author": {
    "@type": "Person",
    "name": author || "genshot Team"
  },
  "publisher": {
    "@type": "Organization",
    "name": "genshot",
    "logo": {
      "@type": "ImageObject",
      "url": `${baseUrl}/images/logo-Genshot.svg`
    }
  },
  "datePublished": datePublished,
  "dateModified": dateModified || datePublished,
  "url": currentUrl
} : null;

// Product/Service schema with pricing
const productSchema = price ? {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": title || "genshot Cybersecurity Platform",
  "description": description || "AI-powered autonomous red team and penetration testing platform",
  "image": image ? `${baseUrl}${image}` : `${baseUrl}/images/og-image.jpg`,
  "brand": {
    "@type": "Brand",
    "name": "genshot"
  },
  "offers": {
    "@type": "Offer",
    "price": price,
    "priceCurrency": currency,
    "availability": "https://schema.org/InStock",
    "seller": {
      "@type": "Organization",
      "name": "genshot"
    }
  }
} : null;

// Compile schemas based on type
const schemas = [organizationSchema, websiteSchema, serviceSchema];

if (type === 'article' && articleSchema) {
  schemas.push(articleSchema);
}

if (type === 'product' && productSchema) {
  schemas.push(productSchema);
}

// FAQPage schema for FAQ sections
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is genshot's AI Red Team platform?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "genshot provides an autonomous AI-powered red team platform that conducts continuous penetration testing and vulnerability assessments using the MITRE ATT&CK framework and OWASP methodologies."
      }
    },
    {
      "@type": "Question", 
      "name": "How does AI-powered penetration testing work?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Our AI agents simulate real-world attack scenarios 24/7, automatically identifying vulnerabilities, testing security controls, and providing actionable remediation guidance without human intervention."
      }
    },
    {
      "@type": "Question",
      "name": "Is genshot compliant with industry standards?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, genshot supports compliance testing for SOC 2 Type II, ISO 27001/27002, PCI DSS, HIPAA, and NIST Cybersecurity Framework standards."
      }
    }
  ]
};

if (Astro.url.pathname.includes('faq')) {
  schemas.push(faqSchema);
}
---

{schemas.map((schema) => (
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
))}
